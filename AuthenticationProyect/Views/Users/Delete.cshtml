@model AuthenticationProyect.Models.User

@{
    ViewData["Title"] = "Eliminar Un item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar</h1>

<h3>Estas seguro que deseas eliminar este usuario?</h3>
<div>
    <h4>User</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 h5 ">
            @Html.DisplayNameFor(model => model.Nombres)
        </dt>
        <dd class="col-sm-10 h5">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Apellidos)
        </dt>
        <dd class="col-sm-10 h5">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Correo)
        </dt>
        <dd class="col-sm-10 h5">
            @Html.DisplayFor(model => model.Correo)
        </dd>

        <dt class="col-sm-2 h5">
            @Html.DisplayNameFor(model => model.Tipo)
        </dt>
        <dd class="col-sm-10 h5">
            @Html.DisplayFor(model => model.Tipo.NombreTipoUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="btn btn-danger" type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index">Volver a la lista</a>
    </form>
</div>
